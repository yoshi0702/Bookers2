<p><%= flash[:notice] %></p>



<div class="container"> <!-- ここを追加 -->
<div class="row">   <!-- ここを追加 -->
<div class="col-xs-3" >
<h1>User info</h1>

<%= attachment_image_tag current_user, :profile_image,fallback:"no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg"  %>

<h3>name</h3>
<%= current_user.name %>
<h3>introduction</h3>
<%= current_user.introduction %>

<%= link_to "", edit_user_path(current_user), class: "btn btn-default glyphicon glyphicon-wrench" %>

<h1>New book</h1>

<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_field :body %>
    <%= f.submit 'Create Book', class: "btn btn-default" %>
<% end %>
</div>

 <div class="col-xs-9">
<h1>Books</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
  		<% @book_detail.each do |book| %>
  		<tr>
  			<td><%= attachment_image_tag @user, :profile_image,fallback:"no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" %></td>
  			<td><%= link_to book.title, book_path(book) %></td>
  			<td><%= link_to book.body %></td>
      </tr>
     	<% end %>
  </tbody>

</table>
</div>
